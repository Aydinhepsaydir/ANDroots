<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayUserActivity"
        android:gravity="center"

>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_margin="16dp"
        >
                <ImageView android:layout_width="164dp" android:layout_height="164dp"
                           android:src="@drawable/red_andi"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/name"
                          android:textSize="24sp"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/story"
                          android:textSize="16sp"
                />

                <LinearLayout android:id="@+id/myLanguagesLayout"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout android:id="@+id/myCountriesLayout"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">

                </LinearLayout>

        </LinearLayout>

</LinearLayout>